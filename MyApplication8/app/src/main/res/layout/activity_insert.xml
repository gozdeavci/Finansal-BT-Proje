<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"

    tools:context="com.example.barbaros.raceyourwords.InsertActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="109dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/tv_kelime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:text="Kelime"
            android:textColor="@color/btn_loginActivity"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="114dp" />

        <EditText
            android:id="@+id/et_kelime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="İngilizce Kelimeyi Buraya Giriniz"
            android:textColor="@color/btn_loginActivity"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="131dp" />

        <TextView
            android:id="@+id/tv_anlamlari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anlamlari"
            android:textColor="@color/btn_loginActivity"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="186dp" />

        <EditText
            android:id="@+id/et_Anlamlari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Türkçe Kelimeyi Buraya Giriniz"
            android:textColor="@color/btn_loginActivity"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="202dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_kaydet"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/btn_loginActivity"
        android:onClick="Islem"
        android:text="Yerel Sözlügüne Kaydet"
        android:textColor="@color/app_background"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="190dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
